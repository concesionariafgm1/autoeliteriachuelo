# ============================================
# AUTOELITE - HTACCESS Configuration
# URLs amigables, sin extensiones .html
# ============================================

# ===== REWRITE ENGINE =====
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # ===== REDIRECCIONAR .html A URL SIN EXTENSION =====
  # Si alguien accede a /example.html, redirigir a /example
  RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^\ ]+)\.html
  RewriteRule ^(.*)\.html$ /$1 [L,R=301]
  
  # ===== SERVIR .html SI NO EXISTE LA RUTA DIRECTA =====
  # Si acceden a /example y existe /example.html, servir example.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}\.html -f
  RewriteRule ^([^\.]+)$ $1.html [NC,L]
  
  # ===== PREVENIR ACCESO DIRECTO A .html =====
  # Asegurar que no se pueda acceder directamente a .html
  RewriteCond %{THE_REQUEST} \.html
  RewriteRule ^(.*)\.html$ / [L,R=404]
</IfModule>

# ===== CACHE Y COMPRESIÓN =====
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Imágenes (30 días)
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/gif "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  
  # CSS y JavaScript (7 días)
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType text/javascript "access plus 7 days"
  
  # Fuentes (30 días)
  ExpiresByType font/ttf "access plus 30 days"
  ExpiresByType font/otf "access plus 30 days"
  ExpiresByType font/woff "access plus 30 days"
  ExpiresByType font/woff2 "access plus 30 days"
  ExpiresByType application/vnd.ms-fontobject "access plus 30 days"
  
  # HTML (1 día - actualizar frecuentemente)
  ExpiresByType text/html "access plus 1 day"
  
  # Manifests
  ExpiresByType application/manifest+json "access plus 1 day"
  ExpiresByType application/x-web-app-manifest+json "access plus 1 day"
</IfModule>

# ===== COMPRESIÓN GZIP =====
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/xml+rss
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/atom+xml
  AddOutputFilterByType DEFLATE image/svg+xml
  AddOutputFilterByType DEFLATE application/x-font-ttf
  AddOutputFilterByType DEFLATE font/opentype
</IfModule>

# ===== HEADERS DE SEGURIDAD =====
<IfModule mod_headers.c>
  # Prevenir MIME type sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Prevenir clickjacking
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Protección XSS
  Header set X-XSS-Protection "1; mode=block"
  
  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Feature Policy / Permissions Policy
  Header set Permissions-Policy "camera=(), microphone=(), payment=()"
</IfModule>

# ===== TIPOS MIME =====
<IfModule mod_mime.c>
  AddType application/json json
  AddType application/manifest+json webmanifest
  AddType image/svg+xml svg svgz
  AddEncoding gzip svgz
  AddType application/x-web-app-manifest+json webapp
  AddType text/plain md
</IfModule>

# ===== ACCESO A ARCHIVOS SENSIBLES =====
<FilesMatch "(firebase\.js|config\.js|serviceAccount\.json|\.env)">
  Order allow,deny
  Deny from all
</FilesMatch>

# ===== PERMITIR ACCESO PUBLIC =====
<FilesMatch "\.(jpg|jpeg|png|gif|css|js|ico|svg|woff|woff2|ttf|otf|webp|webm)$">
  Header set Cache-Control "public, max-age=2592000"
</FilesMatch>

